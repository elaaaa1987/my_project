<h3>List Of Roles</h3>
<table id="rolesTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
            </tr>
        </thead>
        <tbody id="usersList">
        <% @roles.each do |role| %>
          <tr>
            <td><%= role.name %></td>
            <td><%= role.status %></td>
          </tr>
        <% end %>
        </tbody>
    </table>
<script type="text/javascript"> 
  $(document).ready(function() {
      $('#rolesTable').DataTable();
  } );
</script>
<h3>List Of Users</h3>
<table id="usersTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>User Image</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody id="usersList">
        <%= render :partial => "users/users_list", :locals =>{:users => @users}%>
        </tbody>
    </table>
<script type="text/javascript"> 
  $(document).ready(function() {
      $('#usersTable').DataTable();

  } );
</script>