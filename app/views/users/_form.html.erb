<%= form_for(@user, :multipart => true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="exampleInputEmail1">First Name</label>
     <%= f.text_field :first_name, :class => "form-control", :placeholder =>"Enter first name"  %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Last Name</label>
     <%= f.text_field :last_name, :class => "form-control", :placeholder =>"Enter last name"  %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
     <%= f.text_field :email, :class => "form-control", :placeholder =>"Enter email"  %>
  </div>
  <div class="form-group">
    <label for="exampleSelect1">Role</label>
   <%= f.collection_select(:role_id, roles, :id, :name, {prompt: '--Select Role --'}, :class=>"selectpicker form-control") %>
  </div>

  <div class="form-group">
    <label for="exampleInputFile">Image Upload</label>
    <%= f.fields_for :attachments_attributes do |image_fields| %>
      <%= image_fields.file_field :attachments, :multiple => true, :class => "form-control-file"%>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary"%>
  </div>
<% end %>
